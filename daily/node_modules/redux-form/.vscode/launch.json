{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "preLaunchTask": "build",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/debug/**.js"],
      "args": ["-i"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
